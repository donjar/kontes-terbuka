.container
  %h1 Buat isian
  = form_for @short_problem, html: { class: 'form-horizontal' } do |f|
    .form-group
      = f.label :problem_no, class: 'col-sm-2'
      .col-sm-4
        = f.text_field :problem_no, class: 'form-control', autocomplete: 'off'
    .form-group
      = f.label :statement, class: 'col-sm-2'
      .col-sm-10
        = find_and_preserve do
          = f.text_area :statement, class: 'form-control'
    .form-group
      = f.label :answer, class: 'col-sm-2'
      .col-sm-4
        = f.text_field :answer, class: 'form-control', autocomplete: 'off'
    .form-group
      = f.label :correct_score, class: 'col-sm-2'
      .col-sm-4
        = f.text_field :correct, class: 'form-control', autocomplete: 'off'
    .form-group
      = f.label :wrong_score, class: 'col-sm-2'
      .col-sm-4
        = f.text_field :wrong, class: 'form-control', autocomplete: 'off'
    .form-group
      = f.label :empty_score, class: 'col-sm-2'
      .col-sm-4
        = f.text_field :empty, class: 'form-control', autocomplete: 'off'
    .form-group
      = f.label :start_time_is_nil, class: 'col-sm-2'
      .col-sm-4
        = f.check_box :start_time_is_nil
    .form-group
      = f.label :start_time, class: 'col-sm-2'
      .col-sm-4
        = f.datetime_local_field :start_time, class: 'form-control', autocomplete: 'off'
    .form-group
      = f.label :end_time_is_nil, class: 'col-sm-2'
      .col-sm-4
        = f.check_box :end_time_is_nil
    .form-group
      = f.label :end_time, class: 'col-sm-2'
      .col-sm-4
        = f.datetime_local_field :end_time, class: 'form-control', autocomplete: 'off'
    .form-group
      .col-sm-offset-2.col-sm-4
        = f.submit 'Edit soal', class: 'btn'
